<AnchorPane stylesheets="@ScanStyle.css" id="AnchorPane" prefHeight="460.0" prefWidth="541.0" style="-fx-background-color: e7e0e0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Scanner.ScannerFXMLController">
   <children>
      <ImageView fitHeight="77.0" fitWidth="105.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/res/0.jpg" />
         </image>
      </ImageView>
      <Label layoutX="216.0" layoutY="73.0" text="Scanner">
         <font>
            <Font name="Arial Black" size="24.0" />
         </font>
      </Label>
      <GridPane layoutX="123.0" layoutY="215.0" prefHeight="30.0" prefWidth="295.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="121.0" minWidth="10.0" prefWidth="75.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="220.0" minWidth="10.0" prefWidth="220.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="numField" prefWidth="134.0" GridPane.columnIndex="1" onKeyPressed="#handleEnterPressed"  promptText="Enter number" styleClass="text-field" />
            <Label text="Numero:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </GridPane>
      <Button fx:id="scanButton" layoutX="356.0" layoutY="299.0" mnemonicParsing="false" onAction="#handleScanButtonClick" text="Scan">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="quitButton" layoutX="185.0" layoutY="299.0" mnemonicParsing="false" onAction="#handleQuitButtonClick" text="Quitter">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
